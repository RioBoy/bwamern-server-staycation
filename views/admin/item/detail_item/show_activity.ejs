<!-- DataTables Example -->
<div class="tab-pane fade" id="show-activity" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/activity" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="type">Type</label>
                            <input type="text" class="form-control" id="type" name="type" placeholder="Enter type"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input type="file" class="form-control" id="image" name="image" required>
                        </div>
                        <input type="hidden" name="itemId" value="<%= itemId %>">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i = 0; i < activity.length; i++ ) { %>
                                <tr>
                                    <td><%= i + 1 %> </td>
                                    <td><%= activity[i].name %> </td>
                                    <td><%= activity[i].type %> </td>
                                    <td>
                                        <img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="imageUrl"
                                            width="70px">
                                    </td>
                                    <td class="d-flex justify-content-center">
                                        <form
                                            action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                                            method="POST">
                                            <a href="javascript:void()" type="button"
                                                class="btn btn-warning btn-circle btn-sm mr-3 button-update-activity"
                                                data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>"
                                                data-type="<%= activity[i].type %>" data-toggle="modal"
                                                data-target="#editModalActivity">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                                    class="fas fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End DataTables -->