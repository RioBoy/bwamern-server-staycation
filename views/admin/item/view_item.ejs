<%- include('../../partials/header') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include('../../partials/sidebar') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include('../../partials/navbar')  %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <%- include('../../partials/message') %>

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Item</h1>
                <!-- End Heading -->

                <% if (action == 'view') { %>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-item" role="tab"
                            aria-controls="home" aria-selected="true">Show Item</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#add-item" role="tab"
                            aria-controls="profile" aria-selected="false">Add Item</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('show_table_item') %>
                    <%- include('add_item') %>
                </div>

                <% }else if(action == 'show image') { %>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-image" role="tab"
                            aria-controls="home" aria-selected="true">Show Image</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('show_image_item') %>
                </div>
                <% } else { %>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#edit-item" role="tab"
                            aria-controls="home" aria-selected="true">Edit Item</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('edit_item') %>
                </div>
                <% } %>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer')  %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/js')  %>
<script>
    CKEDITOR.replace('about');
</script>